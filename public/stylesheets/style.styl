// use nib
@import 'nib'
// fonts
@import url('https://fonts.googleapis.com/css2?family=PT+Mono&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap');

// varaibles
colorGrey = #f5f5f5
colorPurple = #7E2FFF

body
  padding 50px
  font-family 'Space Mono', monospace
  font-size 20px

a
  color #00b7ff

#chat-box
  size 360px 630px
  absolute top 50% right 40px
  background #FFFFFF
  border 2px solid #000000
  box-sizing border-box
  margin 0 auto
  filter drop-shadow(4px 4px 0px rgba(0, 0, 0, 0.4))
  transform translate(0, -50%)

ul , li
  list-style-type none

ul
  padding 20px
  margin 0

li
  padding 0
  margin 5px 0

#add-mates
  background #7E2FFF
  border 2px solid #000000
  box-sizing border-box
  color #fff
  text-align center
  padding 20px
  p
    font-style normal
    font-weight bold
    line-height 125%
    text-align center
    color #FFFFFF
    margin 0
    padding 0

#add-mates-link
  background white
  color black
  padding 10px
  margin 10px 0
  relative top
  p
    margin 0
    font-size 16px
    display inline-block
    line-height 16px
    color black


#send
  background url('/images/send.svg') no-repeat top left
  background-size 20px 20px
  width 20px
  display inline-block
  vertical-align middle
  height 100%
  box-sizing border-box

#copy-link
  display inline-block
  vertical-align middle
  height 20px

#messages-container
  padding 20px

#chatForm
  margin 20px
  position relative
  height 90px

#message-input
  resize none
  background rgba(126, 47, 255, 0.09)
  border-radius 10px
  outline none
  text-decoration none
  padding 16px
  cursor pointer
  font-style normal
  font-size 20px
  line-height 125%
  color #727272
  width 283px
  height 100%
  display inline-block
  box-sizing border-box
  border transparent
  &:focus
    border colorPurple

#user-stat
  text-align center
  line-height 125%
  font-size 16px
  color #727272

#bottom-container
  absolute bottom 0 left 0 right 0
  filter drop-shadow(0px -5px 5px rgba(0,0,0,0.07))
  background white


button,
input[type="submit"],
input[type="reset"]
  background none
  color inherit
  border none
  padding 0
  font inherit
  cursor pointer
  outline inherit


  // video
#video-background
  background: #000
  fixed top 0 right 0 bottom 0 left 0
  z-index -99

#video-foreground,
#video-background iframe
  absolute top 50% left 50%
  transform translate(-50%, -50%)
  size 100% 150%
  pointer-events none
